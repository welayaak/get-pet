@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}


<section class="h-screen">
    <div class="row d-flex justify-content-center col-12 h-100 d-flex align-items-center justify-content-center">
        <div class="col-4 rounded m-20 background-secondary rounded-3 p-5">
            <form id="account" method="post" class="py-5">
                <div class="d-flex justify-content-center">
                    <i class="icon-map-marker icon-4x text-dark-purple"></i>
                </div>
                <div class="d-flex justify-content-center mb-5">
                    <h1 class="text-center text-dark-purple">@ViewData["Title"]</h1>

                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="form-group mb-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email address" required autofocus/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" required/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe"/>
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <button type="submit" class="btn btn-lg background-primary text-pink btn-block">Sign in</button>
                </div>
            </form>
        </div>
        <div class="row col-12">
            <p class="col-12 text-center">
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
            <p class="col-12 text-center">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}